<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/alert_light_frame"
    android:backgroundTint="#E5D3B3">
    <TextView
        android:text="Lets Compute For:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <TextView
        android:text="Compound Interest"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="70px"
        android:textStyle="bold"
        android:layout_marginTop="15px"
        android:layout_marginLeft="0.0dp"
        android:gravity="center" />
    <TextView
        android:text="  Enter Principal:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="30px" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:inputType="numberDecimal|number" />
    <TextView
        android:text="  Enter Rate:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="30px" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:inputType="numberDecimal|number" />
    <TextView
        android:text="  Enter Time:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="30px" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:inputType="numberDecimal|number" />
    <TextView
        android:text="  Enter the number of interest:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="30px" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText5"
        android:inputType="numberDecimal|number" />
    <Button
        android:text="ENTER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CIbtn"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginHorizontal="130px"
        android:layout_marginVertical="20px"
        android:textStyle="bold"
        android:onClick="ButtonClick"
        app:backgroundTint="#987554"/>
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="90px"
        android:textStyle="bold"
        android:id="@+id/textView8"
        android:textColor="#ff000000" />

</LinearLayout>
